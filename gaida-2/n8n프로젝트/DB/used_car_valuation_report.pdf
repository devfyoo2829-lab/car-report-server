\section{부위별 감가율 구체 예시}
% ========================================

\subsection{4.1 경미한 사고}

\textbf{사례}: 프런트 휀더 판금 수리 (국산 중형차, 2년식)

\begin{align*}
\text{기준가격} &: 2,000 \text{만원} \\
\text{보정가격} &: 2,000 \times 0.618 = 1,236 \text{만원} \\
\text{부위감가} &: 1,236 \times \frac{60}{10,000} \times 1.0 \times 1.0 \times 1.2 \times 0.5 \\
&\approx 44 \text{만원} \\
\text{최종시세} &: 1,236 - 0.44 \approx 1,235.56 \text{만원 (약 98\% 수준)}
\end{align*}

\subsection{4.2 중간 수준 사고}

\textbf{사례}: 쿼터패널 교환 (국산 SUV, 3년식)

\begin{align*}
\text{기준가격} &: 3,500 \text{만원} \\
\text{보정가격} &: 3,500 \times 0.518 = 1,813 \text{만원} \\
\text{부위감가} &: 1,813 \times \frac{156}{10,000} \times 1.4 \times 0.9 \times 1.2 \times 1.0 \\
&\approx 427 \text{만원} \\
\text{최종시세} &: 1,813 - 4.27 \approx 1,388.73 \text{만원 (약 79\% 수준)}
\end{align*}

\subsection{4.3 심각한 사고}

\textbf{사례}: 프런트 패널 + 사이드 멤버 수리 (프리미엄 수입차, 4년식)

\begin{align*}
\text{기준가격} &: 6,500 \text{만원} \\
\text{보정가격} &: 6,500 \times 0.412 = 2,678 \text{만원}
\end{align*}

\textbf{부위감가 1} (프런트패널 교환, A랭크):

\begin{align*}
&= 2,678 \times \frac{144}{10,000} \times 1.6 \times 0.8 \times 1.8 \times 1.0 \\
&\approx 987 \text{만원}
\end{align*}

\textbf{부위감가 2} (사이드멤버 교환, B랭크):

\begin{align*}
&= 2,678 \times \frac{150}{10,000} \times 1.8 \times 0.8 \times 1.8 \times 1.0 \\
&\approx 1,171 \text{만원}
\end{align*}

\begin{align*}
\text{총손상감가} &= 987 + 1,171 = 2,158 \text{만원} \\
\text{최종시세} &: 2,678 - 21.58 \approx 519.22 \text{만원 (약 8\% 수준)} \\
&\text{(재판매가 거의 불가능한 수준)}
\end{align*}

