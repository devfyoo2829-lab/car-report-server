\section{중고차 시세 추정 계산 방법}
% ========================================

\subsection{3.1 최종 시세가격 산정식}

\begin{equation}
\text{최종시세} = \text{기준가격} - \text{연식감가액} - \text{사고손상감가액}
\end{equation}

\subsection{3.2 Step별 상세 계산 프로세스}

\subsubsection{Step 1: 기준가격 결정}

\textbf{데이터 출처}: 보험개발원 차량기준가액

\begin{itemize}
  \item 신차 판매가(부가세 포함) 기준
  \item 분기별 업데이트 (KIDI BIGIN 플랫폼)
  \item 조회 링크: \url{https://bigin.kidi.or.kr:9443/user/nd00044.action}
\end{itemize}

\subsubsection{Step 2: 연식 감가 계산}

\begin{equation}
\text{연식감가액} = \text{기준가격} \times (1 - \text{잔가율})
\end{equation}

\begin{equation}
\text{보정가격(기본 시세)} = \text{기준가격} - \text{연식감가액}
\end{equation}

\textbf{예시}: 신차가격 3,000만원, 3년식 국산 승용차

\begin{align*}
\text{잔가율} &: 51.8\% \\
\text{연식감가액} &= 3,000 \times (1 - 0.518) = 1,446 \text{만원} \\
\text{보정가격} &= 3,000 - 1,446 = 1,554 \text{만원}
\end{align*}

\subsubsection{Step 3: 사고 손상 감가 계산}

\begin{equation}
\text{부위감가액} = \text{보정가격} \times \frac{\text{부위감가계수}}{10,000} \times \text{랭크별계수} \times \text{사용년계수} \times \text{차량등급계수} \times \text{수리방식계수}
\end{equation}

\textbf{수리방식계수}:
\begin{itemize}
  \item 교환: 1.0
  \item 판금·용접: 0.5
\end{itemize}

\textbf{예시}: 3년식 고급차(특A), 후드 판금 수리

\begin{align*}
\text{부위감가액} &= 1,554 \times \frac{120}{10,000} \times 1.0 \times 0.9 \times 1.5 \times 0.5 \\
&\approx 126 \text{만원}
\end{align*}

\textbf{다중 손상 시}: 각 부위 손상 감가액을 합산

\begin{equation}
\text{총손상감가액} = \sum_{i=1}^{n} \text{부위}_{i}\text{감가액}
\end{equation}

\subsubsection{Step 4: 최종 시세 산정}

\begin{equation}
\text{최종시세} = \text{보정가격} - \text{총손상감가액}
\end{equation}

